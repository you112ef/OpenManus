# OpenManus Web Backend Environment Variables

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# OpenManus Configuration
OPENMANUS_CONFIG_PATH=../config
OPENMANUS_LOG_LEVEL=INFO

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8001", "https://*.pages.dev"]
CORS_ALLOW_CREDENTIALS=true

# Security
SECRET_KEY=your-secret-key-here
API_KEY=your-api-key-here

# Database (if using)
DATABASE_URL=sqlite:///./openmanus.db

# Redis (if using)
REDIS_URL=redis://localhost:6379

# External APIs
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/openmanus-web.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Session Management
SESSION_SECRET=your-session-secret
SESSION_TIMEOUT=3600

# File Upload
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=./uploads